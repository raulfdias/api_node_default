{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ], // Identação definida para 2 espaços.
        "semi": [
            "error",
            "always"
        ], // Uso do ponto e vírgula.
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true,
                "avoidEscape": true
            }
        ],
        "quote-props": [
            "warn",
            "consistent"
        ],
        "one-var": "off",
        "space-before-function-paren": "off",
        "camelcase": [
            "warn",
            {
                "properties": "never",
                "ignoreDestructuring": true
            }
        ]
    }
}
